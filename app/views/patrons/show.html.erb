<h2><%= current_user.email %></h2>
<h3><%= current_user.loyalty_points %></h3>

<p>My Reservations</p>

<% unless @reservations.empty? %>
	<% @reservations.each do |reservation| %>
		<p><%= "#{reservation.restaurant.name}, #{reservation.restaurant.address}, #{reservation.date}, #{reservation.guest_count} guests" %><%= link_to 'Delete Reservation', restaurant_reservation_path(reservation.restaurant.id, reservation.id), method: 'delete' %></p>
	<% end %>
<% end %>